<%= content_for :title, " - Movies"%>
<h1>Movies</h1>
<%= link_to "Tally votes?", tally_votes_path %>
<ol>
    <% @movies.each do |movie|%>
        <li>
        <% if can? :destroy, Movie%>
        <div class="btn-group">
            <%= link_to "Delete", {:controller => :movies, :id => movie.id, :action => 'destroy' }, :method => :delete, class: "btn btn-danger btn-sm"%>
        </div>
        <%= link_to movie.title, movie %> 
        </li>
        <% end %>
    <% end %>
</ol>
<br>
<%= link_to 'Add movie', find_movies_path %>